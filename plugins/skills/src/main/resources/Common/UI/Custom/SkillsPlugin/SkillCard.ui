@CardNameStyle = LabelStyle(
  FontSize: 17,
  TextColor: #eaf3ff,
  RenderBold: true,
  HorizontalAlignment: Start,
  VerticalAlignment: Center,
  FontName: "Secondary"
);

@CardMetaStyle = LabelStyle(
  FontSize: 14,
  TextColor: #b2c8e5,
  HorizontalAlignment: Start,
  VerticalAlignment: Center
);

@CardDescStyle = LabelStyle(
  FontSize: 13,
  TextColor: #7f9bbd,
  HorizontalAlignment: Start,
  VerticalAlignment: Center,
  Wrap: true
);

Button {
  Anchor: (Height: 118, Bottom: 10);
  FlexWeight: 1;
  Padding: (Full: 10);
  Style: (
    Default: (Background: #1a2a3e),
    Hovered: (Background: #243851),
    Pressed: (Background: #172638)
  );

  Group {
    LayoutMode: Left;

    Group {
      Anchor: (Width: 54, Height: 54, Top: 4);
      Background: #2d4564;
      LayoutMode: Middle;

      Label #SubcommandIcon {
        Text: "[**]";
        Style: (
          FontSize: 13,
          TextColor: #f3f8ff,
          RenderBold: true,
          HorizontalAlignment: Center,
          VerticalAlignment: Center
        );
      }
    }

    Group { Anchor: (Width: 10); }

    Group {
      LayoutMode: Top;
      FlexWeight: 1;

      Label #SubcommandName {
        Text: "";
        Anchor: (Height: 30);
        Style: @CardNameStyle;
      }

      Label #SubcommandUsage {
        Text: "";
        Anchor: (Height: 24);
        Style: @CardMetaStyle;
      }

      Label #SubcommandDescription {
        Text: "";
        Anchor: (Height: 42);
        Style: @CardDescStyle;
      }
    }
  }
}
