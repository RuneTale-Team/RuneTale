@CardNameStyle = LabelStyle(
  FontSize: 16,
  TextColor: #dde8f5,
  RenderBold: true,
  HorizontalAlignment: Start,
  VerticalAlignment: Center,
  FontName: "Secondary"
);

@CardMetaStyle = LabelStyle(
  FontSize: 12,
  TextColor: #8ea4bb,
  HorizontalAlignment: Start,
  VerticalAlignment: Center,
  Wrap: true
);

@CardXpStyle = LabelStyle(
  FontSize: 12,
  TextColor: #53d891,
  HorizontalAlignment: Start,
  VerticalAlignment: Center,
  RenderBold: true
);

@CardStatusStyle = LabelStyle(
  FontSize: 11,
  TextColor: #99afc6,
  HorizontalAlignment: Start,
  VerticalAlignment: Center
);

@SelectOverlayStyle = TextButtonStyle(
  Default: (Background: #00000000, LabelStyle: (FontSize: 1, TextColor: #00000000)),
  Hovered: (Background: #ffffff(0.04), LabelStyle: (FontSize: 1, TextColor: #00000000)),
  Pressed: (Background: #ffffff(0.08), LabelStyle: (FontSize: 1, TextColor: #00000000))
);

Group {
  Anchor: (Height: 126, Bottom: 10);
  FlexWeight: 1;
  Padding: (Full: 11);
  Background: (TexturePath: "Assets/UI/RecipeCatalogueItemPatch.png", Border: 22);

  Group {
    LayoutMode: Left;
    FlexWeight: 1;

    Group {
      Anchor: (Width: 72, Height: 72, Right: 10, Top: 2);
      Background: (TexturePath: "Assets/UI/Slot.png");
    }

    Group {
      LayoutMode: Top;
      FlexWeight: 1;

      Label #CardName {
        Text: "";
        Anchor: (Height: 22);
        Style: @CardNameStyle;
      }

      Label #CardIngredients {
        Text: "";
        Anchor: (Height: 34);
        Style: @CardMetaStyle;
      }

      Group {
        LayoutMode: Left;
        Anchor: (Top: 4);

        Label #CardXp {
          Text: "";
          Anchor: (Height: 17);
          Style: @CardXpStyle;
        }

        Group { Anchor: (Width: 8); }

        Label #CardStatus {
          Text: "";
          Anchor: (Height: 16);
          Style: @CardStatusStyle;
        }
      }
    }
  }

  Group #SelectedFrame {
    Anchor: (Full: 1);
    Background: (TexturePath: "Assets/UI/RecipeCatalogueItemActivePatch.png", Border: 22);
    Visible: false;
  }

  Group #LockOverlay {
    Anchor: (Full: 1);
    Background: #05101a(0.58);
    Visible: false;
  }

  TextButton #SelectBtn {
    Text: "";
    Anchor: (Full: 1);
    Style: @SelectOverlayStyle;
  }
}
