$C = "../Common.ui";

@HeaderTitleStyle = LabelStyle(
  FontSize: 28,
  TextColor: #efe3d7,
  RenderBold: true,
  FontName: "Secondary",
  VerticalAlignment: Center
);

@HeaderMetaStyle = LabelStyle(
  FontSize: 13,
  TextColor: #b8aca0,
  VerticalAlignment: Center
);

@PanelTitleStyle = LabelStyle(
  FontSize: 15,
  TextColor: #cfd6e0,
  RenderUppercase: true,
  RenderBold: true,
  LetterSpacing: 1,
  FontName: "Secondary",
  VerticalAlignment: Center
);

@SectionTitleStyle = LabelStyle(
  FontSize: 21,
  TextColor: #f2f6fb,
  RenderBold: true,
  FontName: "Secondary",
  VerticalAlignment: Center
);

@TierTabStyle = TextButtonStyle(
  Default: (
    Background: (TexturePath: "Assets/UI/Secondary.png", Border: 12),
    LabelStyle: (FontSize: 14, TextColor: #bdcbd3, RenderBold: true, HorizontalAlignment: Start, VerticalAlignment: Center)
  ),
  Hovered: (
    Background: (TexturePath: "Assets/UI/Secondary_Hovered.png", Border: 12),
    LabelStyle: (FontSize: 14, TextColor: #d7e4ea, RenderBold: true, HorizontalAlignment: Start, VerticalAlignment: Center)
  ),
  Pressed: (
    Background: (TexturePath: "Assets/UI/Secondary_Pressed.png", Border: 12),
    LabelStyle: (FontSize: 14, TextColor: #9fb0bb, RenderBold: true, HorizontalAlignment: Start, VerticalAlignment: Center)
  ),
  Disabled: (
    Background: (TexturePath: "Assets/UI/Disabled.png", Border: 12),
    LabelStyle: (FontSize: 14, TextColor: #73818f, RenderBold: true, HorizontalAlignment: Start, VerticalAlignment: Center)
  )
);

@CraftButtonStyle = TextButtonStyle(
  Default: (
    Background: (TexturePath: "Assets/UI/Primary.png", VerticalBorder: 12, HorizontalBorder: 80),
    LabelStyle: (FontSize: 14, TextColor: #bfcdd5, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center)
  ),
  Hovered: (
    Background: (TexturePath: "Assets/UI/Primary_Hovered.png", VerticalBorder: 12, HorizontalBorder: 80),
    LabelStyle: (FontSize: 14, TextColor: #d4dde4, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center)
  ),
  Pressed: (
    Background: (TexturePath: "Assets/UI/Primary_Pressed.png", VerticalBorder: 12, HorizontalBorder: 80),
    LabelStyle: (FontSize: 14, TextColor: #aebcc5, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center)
  ),
  Disabled: (
    Background: (TexturePath: "Assets/UI/Disabled.png", VerticalBorder: 12, HorizontalBorder: 80),
    LabelStyle: (FontSize: 14, TextColor: #748190, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center)
  )
);

@TierSelectionPip = Group {
  Anchor: (Width: 8, Height: 28, Left: 2, Right: 6);
  Background: #57a2f6;
  Visible: false;
};

Group {
  Anchor: (Width: 1040, Height: 690);
  LayoutMode: Top;
  Padding: (Left: 13, Right: 13, Top: 10, Bottom: 10);
  Background: #101017(0.98);

  Group {
    Anchor: (Full: 1);
    Background: (TexturePath: "Assets/UI/ContainerPatch.png", Border: 46);
  }

  Group {
    Anchor: (Height: 68);
    LayoutMode: Left;
    Padding: (Left: 14, Right: 14, Top: 10, Bottom: 10);
    Background: (TexturePath: "Assets/UI/ContainerHeaderNoRunes.png", HorizontalBorder: 35, VerticalBorder: 0);

    Group {
      Anchor: (Width: 44, Height: 44, Top: 2);
      Background: (TexturePath: "Assets/UI/ContainerPanelLightPatch.png", Border: 8);
      LayoutMode: Middle;

      Group {
        Anchor: (Width: 32, Height: 32);
        Background: "Assets/Icons/icon_smithing.png";
      }
    }

    Group { Anchor: (Width: 12); }

    Group {
      LayoutMode: Top;
      FlexWeight: 1;

      Label {
        Text: "Smithing Anvil";
        Anchor: (Height: 34);
        Style: @HeaderTitleStyle;
      }

      Label {
        Text: "Basic-crafting inspired layout for weapons and armor forging.";
        Anchor: (Height: 24);
        Style: @HeaderMetaStyle;
      }
    }
  }

  Group { Anchor: (Height: 10); }

  Group {
    LayoutMode: Left;
    FlexWeight: 1;

    Group {
      Anchor: (Width: 238);
      LayoutMode: Top;
      Padding: (Full: 10);
      Background: (TexturePath: "Assets/UI/ContainerPanelPatch.png", Border: 8);

      Label {
        Text: "Material Tiers";
        Anchor: (Height: 35, Horizontal: 8);
        Style: @PanelTitleStyle;
      }

      Group {
        Anchor: (Height: 1);
        Background: #1b2533;
      }

      Group { Anchor: (Height: 10); }

      Group {
        Anchor: (Height: 38, Bottom: 6);
        LayoutMode: Left;

        @TierSelectionPip #TierBronzeIndicator {}

        TextButton #TierBronze {
          Text: "Bronze";
          FlexWeight: 1;
          Padding: (Left: 12);
          Style: @TierTabStyle;
        }
      }

      Group {
        Anchor: (Height: 38, Bottom: 6);
        LayoutMode: Left;

        @TierSelectionPip #TierIronIndicator {}

        TextButton #TierIron {
          Text: "Iron";
          FlexWeight: 1;
          Padding: (Left: 12);
          Style: @TierTabStyle;
        }
      }

      Group {
        Anchor: (Height: 38, Bottom: 6);
        LayoutMode: Left;

        @TierSelectionPip #TierSilverIndicator {}

        TextButton #TierSilver {
          Text: "Silver";
          FlexWeight: 1;
          Padding: (Left: 12);
          Style: @TierTabStyle;
        }
      }

      Group {
        Anchor: (Height: 38, Bottom: 6);
        LayoutMode: Left;

        @TierSelectionPip #TierSteelIndicator {}

        TextButton #TierSteel {
          Text: "Steel";
          FlexWeight: 1;
          Padding: (Left: 12);
          Style: @TierTabStyle;
        }
      }

      Group {
        Anchor: (Height: 38, Bottom: 6);
        LayoutMode: Left;

        @TierSelectionPip #TierGoldIndicator {}

        TextButton #TierGold {
          Text: "Gold";
          FlexWeight: 1;
          Padding: (Left: 12);
          Style: @TierTabStyle;
        }
      }

      Group {
        Anchor: (Height: 38, Bottom: 6);
        LayoutMode: Left;

        @TierSelectionPip #TierMithrilIndicator {}

        TextButton #TierMithril {
          Text: "Mithril";
          FlexWeight: 1;
          Padding: (Left: 12);
          Style: @TierTabStyle;
        }
      }

      Group {
        Anchor: (Height: 38, Bottom: 6);
        LayoutMode: Left;

        @TierSelectionPip #TierAdamantiteIndicator {}

        TextButton #TierAdamantite {
          Text: "Adamantite";
          FlexWeight: 1;
          Padding: (Left: 12);
          Style: @TierTabStyle;
        }
      }

      Group {
        Anchor: (Height: 38, Bottom: 6);
        LayoutMode: Left;

        @TierSelectionPip #TierRuniteIndicator {}

        TextButton #TierRunite {
          Text: "Runite";
          FlexWeight: 1;
          Padding: (Left: 12);
          Style: @TierTabStyle;
        }
      }

      Group { FlexWeight: 1; }

      Group {
        Anchor: (Height: 1);
        Background: #1b2533;
      }

      Group { Anchor: (Height: 10); }

      TextButton #StartCraftingButton {
        Text: "Select a Recipe";
        Anchor: (Height: 46);
        Style: @CraftButtonStyle;
      }
    }

    Group { Anchor: (Width: 10); }

    Group {
      LayoutMode: Top;
      FlexWeight: 1;
      Padding: (Full: 10);
      Background: (TexturePath: "Assets/UI/ContainerPanelPatch.png", Border: 8);

      Label {
        Text: "Crafting";
        Anchor: (Height: 35, Horizontal: 8);
        Style: @PanelTitleStyle;
      }

      Group {
        Anchor: (Height: 1);
        Background: #1b2533;
      }

      Group { Anchor: (Height: 6); }

      Label #SectionTitle {
        Text: "Bronze Equipment";
        Anchor: (Height: 32);
        Style: @SectionTitleStyle;
      }

      Group { Anchor: (Height: 8); }

      Group {
        Anchor: (Height: 1);
        Background: #2b3542;
      }

      Group { Anchor: (Height: 10); }

      Group #RecipeGrid {
        LayoutMode: TopScrolling;
        FlexWeight: 1;
        ScrollbarStyle: $C.@DefaultScrollbarStyle;
        KeepScrollPosition: true;
      }
    }
  }
}
