$C = "../Common.ui";

@HeaderTitleStyle = LabelStyle(
  FontSize: 30,
  TextColor: #fff4e4,
  RenderBold: true,
  FontName: "Secondary",
  VerticalAlignment: Center
);

@HeaderMetaStyle = LabelStyle(
  FontSize: 14,
  TextColor: #d6b99a,
  VerticalAlignment: Center
);

@PanelTitleStyle = LabelStyle(
  FontSize: 15,
  TextColor: #f6dcc1,
  RenderUppercase: true,
  RenderBold: true,
  LetterSpacing: 1,
  VerticalAlignment: Center
);

@SectionTitleStyle = LabelStyle(
  FontSize: 20,
  TextColor: #fff2df,
  RenderBold: true,
  FontName: "Secondary",
  VerticalAlignment: Center
);

@TierTabStyle = TextButtonStyle(
  Default: (
    Background: #3a2a1f,
    LabelStyle: (FontSize: 14, TextColor: #f0d6bc, RenderBold: true, HorizontalAlignment: Start, VerticalAlignment: Center)
  ),
  Hovered: (
    Background: #4a3628,
    LabelStyle: (FontSize: 14, TextColor: #fff1e1, RenderBold: true, HorizontalAlignment: Start, VerticalAlignment: Center)
  ),
  Pressed: (
    Background: #312419,
    LabelStyle: (FontSize: 14, TextColor: #ddc3a8, RenderBold: true, HorizontalAlignment: Start, VerticalAlignment: Center)
  )
);

@CraftButtonStyle = TextButtonStyle(
  Default: (
    Background: #6a4b2f,
    LabelStyle: (FontSize: 15, TextColor: #fff3df, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center)
  ),
  Hovered: (
    Background: #7a5737,
    LabelStyle: (FontSize: 15, TextColor: #fff8ee, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center)
  ),
  Pressed: (
    Background: #5b4229,
    LabelStyle: (FontSize: 15, TextColor: #eed8bd, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center)
  )
);

Group {
  Anchor: (Width: 1040, Height: 690);
  LayoutMode: Top;
  Padding: (Full: 16);
  Background: #140f0a(0.95);

  Group {
    Anchor: (Height: 88);
    LayoutMode: Left;
    Padding: (Left: 14, Right: 14, Top: 12, Bottom: 12);
    Background: #2a1d14;

    Group {
      Anchor: (Width: 48, Height: 48, Top: 4);
      Background: #5e442d;
      LayoutMode: Middle;

      Group {
        Anchor: (Width: 32, Height: 32);
        Background: "SkillsPlugin/Assets/Icons/icon_smithing.png";
      }
    }

    Group { Anchor: (Width: 12); }

    Group {
      LayoutMode: Top;
      FlexWeight: 1;

      Label {
        Text: "Smithing Anvil";
        Anchor: (Height: 34);
        Style: @HeaderTitleStyle;
      }

      Label {
        Text: "Basic-crafting inspired layout for weapons and armor forging.";
        Anchor: (Height: 24);
        Style: @HeaderMetaStyle;
      }
    }
  }

  Group { Anchor: (Height: 10); }

  Group {
    LayoutMode: Left;
    FlexWeight: 1;

    Group {
      Anchor: (Width: 220);
      LayoutMode: Top;
      Padding: (Full: 12);
      Background: #2a1d14;

      Label {
        Text: "Material Tiers";
        Anchor: (Height: 22);
        Style: @PanelTitleStyle;
      }

      Group { Anchor: (Height: 10); }

      TextButton #TierBronze {
        Text: "Bronze";
        Anchor: (Height: 38, Bottom: 5);
        Padding: (Left: 12);
        Style: @TierTabStyle;
      }

      TextButton #TierIron {
        Text: "Iron";
        Anchor: (Height: 38, Bottom: 5);
        Padding: (Left: 12);
        Style: @TierTabStyle;
      }

      TextButton #TierSilver {
        Text: "Silver";
        Anchor: (Height: 38, Bottom: 5);
        Padding: (Left: 12);
        Style: @TierTabStyle;
      }

      TextButton #TierSteel {
        Text: "Steel";
        Anchor: (Height: 38, Bottom: 5);
        Padding: (Left: 12);
        Style: @TierTabStyle;
      }

      TextButton #TierGold {
        Text: "Gold";
        Anchor: (Height: 38, Bottom: 5);
        Padding: (Left: 12);
        Style: @TierTabStyle;
      }

      TextButton #TierMithril {
        Text: "Mithril";
        Anchor: (Height: 38, Bottom: 5);
        Padding: (Left: 12);
        Style: @TierTabStyle;
      }

      TextButton #TierAdamantite {
        Text: "Adamantite";
        Anchor: (Height: 38, Bottom: 5);
        Padding: (Left: 12);
        Style: @TierTabStyle;
      }

      TextButton #TierRunite {
        Text: "Runite";
        Anchor: (Height: 38, Bottom: 5);
        Padding: (Left: 12);
        Style: @TierTabStyle;
      }

      Group { FlexWeight: 1; }

      Group {
        Anchor: (Height: 1);
        Background: #5b4028;
      }

      Group { Anchor: (Height: 10); }

      TextButton #StartCraftingButton {
        Text: "Select a Recipe";
        Anchor: (Height: 46);
        Style: @CraftButtonStyle;
      }
    }

    Group { Anchor: (Width: 10); }

    Group {
      LayoutMode: Top;
      FlexWeight: 1;
      Padding: (Full: 12);
      Background: #2a1d14;

      Label {
        Text: "Crafting";
        Anchor: (Height: 20);
        Style: @PanelTitleStyle;
      }

      Group { Anchor: (Height: 6); }

      Label #SectionTitle {
        Text: "Bronze Equipment";
        Anchor: (Height: 32);
        Style: @SectionTitleStyle;
      }

      Group { Anchor: (Height: 8); }

      Group {
        Anchor: (Height: 1);
        Background: #5b4028;
      }

      Group { Anchor: (Height: 10); }

      Group #RecipeGrid {
        LayoutMode: TopScrolling;
        FlexWeight: 1;
        ScrollbarStyle: $C.@DefaultScrollbarStyle;
        KeepScrollPosition: true;
      }
    }
  }
}
