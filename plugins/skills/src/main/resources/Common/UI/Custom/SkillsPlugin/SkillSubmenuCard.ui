@CardNameStyle = LabelStyle(
  FontSize: 18,
  TextColor: #eaf3ff,
  RenderBold: true,
  HorizontalAlignment: Start,
  VerticalAlignment: Center,
  FontName: "Secondary"
);

@CardMetaStyle = LabelStyle(
  FontSize: 15,
  TextColor: #b2c8e5,
  HorizontalAlignment: Start,
  VerticalAlignment: Center
);

@CardDescStyle = LabelStyle(
  FontSize: 14,
  TextColor: #7f9bbd,
  HorizontalAlignment: Start,
  VerticalAlignment: Center,
  Wrap: true
);

Button {
  Anchor: (Height: 132, Bottom: 10);
  FlexWeight: 1;
  Padding: (Full: 12);
  Style: (
    Default: (Background: #1a2a3e),
    Hovered: (Background: #243851),
    Pressed: (Background: #172638)
  );

  Group {
    LayoutMode: Left;

    Group #IconContainer {
      Anchor: (Width: 58, Height: 58, Top: 2);
      Background: #2f4c70;
      LayoutMode: Middle;
      Visible: false;

      Group #SubcommandIcon {
        Anchor: (Width: 44, Height: 44);
        Background: "Assets/Icons/icon_unknown.png";
      }
    }

    Group {
      Anchor: (Width: 12);
    }

    Group {
      LayoutMode: Top;
      FlexWeight: 1;

      Label #SubcommandName {
        Text: "";
        Anchor: (Height: 34);
        Style: @CardNameStyle;
      }

      Label #SubcommandUsage {
        Text: "";
        Anchor: (Height: 28);
        Style: @CardMetaStyle;
      }

      Label #SubcommandDescription {
        Text: "";
        Anchor: (Height: 46);
        Style: @CardDescStyle;
      }
    }
  }
}
