@RecipeNameStyle = LabelStyle(
  FontSize: 15,
  TextColor: #eef6ff,
  RenderBold: true,
  HorizontalAlignment: Start,
  VerticalAlignment: Center,
  FontName: "Secondary"
);

@RecipeMetaStyle = LabelStyle(
  FontSize: 12,
  TextColor: #a8bacd,
  HorizontalAlignment: Start,
  VerticalAlignment: Center,
  Wrap: true
);

@RecipeXpStyle = LabelStyle(
  FontSize: 12,
  TextColor: #87d56c,
  HorizontalAlignment: End,
  VerticalAlignment: Center,
  RenderBold: true
);

@RecipeStatusStyle = LabelStyle(
  FontSize: 11,
  TextColor: #7f95aa,
  HorizontalAlignment: End,
  VerticalAlignment: Center
);

@SelectOverlayStyle = TextButtonStyle(
  Default: (Background: #00000000, LabelStyle: (FontSize: 1, TextColor: #00000000)),
  Hovered: (Background: #ffffff(0.04), LabelStyle: (FontSize: 1, TextColor: #00000000)),
  Pressed: (Background: #ffffff(0.08), LabelStyle: (FontSize: 1, TextColor: #00000000))
);

Group {
  Anchor: (Height: 88, Bottom: 6);
  Padding: (Left: 10, Right: 10, Top: 8, Bottom: 8);
  Background: #1a2a3e;

  Group {
    LayoutMode: Left;

    Group {
      Anchor: (Width: 64, Height: 64, Right: 8);
      Background: #2d3c4d;
    }

    Group {
      LayoutMode: Top;
      FlexWeight: 1;

      Label #RecipeName {
        Text: "";
        Anchor: (Height: 22);
        Style: @RecipeNameStyle;
      }

      Label #RecipeIngredients {
        Text: "";
        Anchor: (Height: 20);
        Style: @RecipeMetaStyle;
      }

      Label #RecipeStatus {
        Text: "";
        Anchor: (Height: 16, Top: 2);
        Style: @RecipeStatusStyle;
      }
    }

    Group {
      Anchor: (Width: 110);
      LayoutMode: Top;

      Label #RecipeXp {
        Text: "";
        Anchor: (Height: 22, Top: 8);
        Style: @RecipeXpStyle;
      }
    }
  }

  Group #LockOverlay {
    Anchor: (Full: 1);
    Background: #0b1118(0.6);
    Visible: false;
  }

  TextButton #SelectBtn {
    Text: "";
    Anchor: (Full: 1);
    Style: @SelectOverlayStyle;
  }
}
