@RecipeNameStyle = LabelStyle(
  FontSize: 16,
  TextColor: #dde8f5,
  RenderBold: true,
  HorizontalAlignment: Start,
  VerticalAlignment: Center,
  FontName: "Secondary"
);

@RecipeMetaStyle = LabelStyle(
  FontSize: 12,
  TextColor: #8ea4bb,
  HorizontalAlignment: Start,
  VerticalAlignment: Center,
  Wrap: true
);

@RecipeXpStyle = LabelStyle(
  FontSize: 12,
  TextColor: #53d891,
  HorizontalAlignment: End,
  VerticalAlignment: Center,
  RenderBold: true
);

@RecipeStatusStyle = LabelStyle(
  FontSize: 11,
  TextColor: #99afc6,
  HorizontalAlignment: End,
  VerticalAlignment: Center
);

@SelectOverlayStyle = TextButtonStyle(
  Default: (Background: #00000000, LabelStyle: (FontSize: 1, TextColor: #00000000)),
  Hovered: (Background: #ffffff(0.03), LabelStyle: (FontSize: 1, TextColor: #00000000)),
  Pressed: (Background: #ffffff(0.08), LabelStyle: (FontSize: 1, TextColor: #00000000))
);

Group {
  Anchor: (Height: 94, Bottom: 8);
  Padding: (Left: 11, Right: 11, Top: 8, Bottom: 8);
  Background: (TexturePath: "Assets/UI/RecipeCatalogueItemPatch.png", Border: 22);

  Group {
    LayoutMode: Left;

    Group {
      Anchor: (Width: 72, Height: 72, Right: 10);
      Background: (TexturePath: "Assets/UI/Slot.png");
    }

    Group {
      LayoutMode: Top;
      FlexWeight: 1;

      Label #RecipeName {
        Text: "";
        Anchor: (Height: 22);
        Style: @RecipeNameStyle;
      }

      Label #RecipeIngredients {
        Text: "";
        Anchor: (Height: 20, Top: 1);
        Style: @RecipeMetaStyle;
      }

      Label #RecipeStatus {
        Text: "";
        Anchor: (Height: 16, Top: 6);
        Style: @RecipeStatusStyle;
      }
    }

    Group {
      Anchor: (Width: 110);
      LayoutMode: Top;

      Label #RecipeXp {
        Text: "";
        Anchor: (Height: 22, Top: 9);
        Style: @RecipeXpStyle;
      }
    }
  }

  Group #SelectedFrame {
    Anchor: (Full: 1);
    Background: (TexturePath: "Assets/UI/RecipeCatalogueItemActivePatch.png", Border: 22);
    Visible: false;
  }

  Group #LockOverlay {
    Anchor: (Full: 1);
    Background: #05101a(0.58);
    Visible: false;
  }

  TextButton #SelectBtn {
    Text: "";
    Anchor: (Full: 1);
    Style: @SelectOverlayStyle;
  }
}
