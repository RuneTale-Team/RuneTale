$C = "../Common.ui";

@HeaderTitle = LabelStyle(
  FontSize: 30,
  TextColor: #f2f6ff,
  RenderBold: true,
  VerticalAlignment: Center,
  FontName: "Secondary"
);

@HeaderMeta = LabelStyle(
  FontSize: 16,
  TextColor: #a9bfdc,
  VerticalAlignment: Center
);

@SectionTitle = LabelStyle(
  FontSize: 18,
  TextColor: #e8f0ff,
  RenderBold: true,
  VerticalAlignment: Center,
  RenderUppercase: true,
  FontName: "Secondary"
);

@SectionSubtle = LabelStyle(
  FontSize: 13,
  TextColor: #7f93ac,
  VerticalAlignment: Center,
  RenderUppercase: true,
  LetterSpacing: 1
);

@PanelButton = TextButtonStyle(
  Default: (
    Background: #2a3f59,
    LabelStyle: (FontSize: 14, TextColor: #e3eeff, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center)
  ),
  Hovered: (
    Background: #334d6d,
    LabelStyle: (FontSize: 14, TextColor: #f7fbff, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center)
  ),
  Pressed: (
    Background: #22354c,
    LabelStyle: (FontSize: 14, TextColor: #cfdef6, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center)
  )
);

Group {
  Anchor: (Width: 1040, Height: 680);
  LayoutMode: Top;
  Padding: (Full: 16);
  Background: #0a1320(0.94);

  Group {
    Anchor: (Height: 130);
    LayoutMode: Top;
    Padding: (Left: 14, Right: 14, Top: 10, Bottom: 10);
    Background: #111f33;

    Label {
      Text: "RuneTale Skills";
      Anchor: (Height: 18);
      Style: @SectionSubtle;
    }

    Group { Anchor: (Height: 4); }

    Label #CommandName {
      Text: "Skills";
      Anchor: (Height: 38);
      Style: @HeaderTitle;
    }

    Label #CommandDescription {
      Text: "";
      Anchor: (Height: 28);
      Style: @HeaderMeta;
    }

    Label #CommandUsageLabel {
      Text: "";
      Anchor: (Height: 28);
      Style: @HeaderMeta;
    }
  }

  Group { Anchor: (Height: 10); }

  Group {
    LayoutMode: Left;
    FlexWeight: 1;

    Group {
      Anchor: (Width: 340);
      LayoutMode: Top;
      Padding: (Full: 12);
      Background: #122235;

      TextButton #BackButton {
        Text: "Back";
        Anchor: (Width: 170, Height: 40);
        Style: @PanelButton;
      }

      Group { Anchor: (Height: 6); }

      Group {
        Anchor: (Height: 1);
        Background: #263a52;
      }

      Group { Anchor: (Height: 10); }

      Label {
        Text: "Skills";
        Anchor: (Height: 28);
        Style: @SectionTitle;
      }

      Group { Anchor: (Height: 8); }

      Group #CommandList {
        LayoutMode: TopScrolling;
        FlexWeight: 1;
        ScrollbarStyle: $C.@DefaultScrollbarStyle;
        KeepScrollPosition: true;
      }

      Group #SearchInput {
        Anchor: (Height: 0);
      }

      Group #SendToChatButton {
        Anchor: (Height: 0);
      }
    }

    Group { Anchor: (Width: 10); }

    Group #SubcommandSection {
      LayoutMode: Top;
      FlexWeight: 1;
      Padding: (Full: 12);
      Background: #122235;

      Label #SkillsSectionTitle {
        Text: "Overview";
        Anchor: (Height: 30);
        Style: @SectionTitle;
      }

      Group { Anchor: (Height: 10); }

      Group {
        Anchor: (Height: 1);
        Background: #263a52;
      }

      Group { Anchor: (Height: 10); }

      Group #SubcommandCards {
        LayoutMode: TopScrolling;
        FlexWeight: 1;
        ScrollbarStyle: $C.@DefaultScrollbarStyle;
        KeepScrollPosition: true;
      }
    }
  }

  Group #AliasesSection { Anchor: (Height: 0); }
  Group #PermissionSection { Anchor: (Height: 0); }
  Group #VariantsSection { Anchor: (Height: 0); }
}
